@model FAQ_2._0.Models.FAQ

@{
    ViewBag.Title = "Save";

}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div clanss="form-horizontal">
        <h2>Nova Pergunta</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FAQID)
        @Html.HiddenFor(mode => mode.Pos)

        <div class="form-group">
            @Html.LabelFor(model => model.Pergunta, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Pergunta, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pergunta, "", new { @class = "text-danger" })
            </div>
        </div>
        <p>
            <div class="form-group">
                @Html.LabelFor(model => model.Resposta, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Resposta, 10, 40, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Resposta, "", new { @class = "text-danger" })
                </div>
            </div>
        </p>

        <p>
        <div class="form-group">
            @Html.LabelFor(model => model.Premium, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(model => model.Premium)
            </div>
        </div>
        </p>
        <p>
            <div class="form-group">
                <div class="col-md-10">
                    <select name="Language">
                        <option value="pt" @(Model.Language == "pt" ? "selected" : "")>Português</option>
                        <option value="es" @(Model.Language == "es" ? "selected" : "")>Español</option>
                        <option value="en" @(Model.Language == "en" ? "selected" : "")>English</option>
                        <option value="it" @(Model.Language == "it" ? "selected" : "")>Italiano</option>
                    </select>
                </div>
            </div>
        </p>
        <p>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </p>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
